<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<BorderPane style="-fx-background-image: url('https://github.com/askari12/2I.A-day-in-BIlkent/blob/Unstable/doc/Analysis%20Report%20Sections/Bilkent-02.jpg?raw=true');" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Settings">

    <top>

        <Button fx:id="backButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#backButtonListener" style="-fx-background-color: #94CAFF; -fx-background-radius: 15; -fx-border-color: #FFFFFF; -fx-border-radius: 15;" text="Main Menu">

            <font>
                <Font name="Courier" />
            </font>
        </Button>

    </top>

    <center>

        <VBox alignment="TOP_CENTER" spacing="50" xmlns:fx="http://javafx.com/fxml">


            <HBox alignment="TOP_CENTER" spacing="10" style="-fx-background-color: #FF8C00;" xmlns:fx="http://javafx.com/fxml">

                <Label style="-fx-font-weight: bold" text="Settings" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Courier" size="30.0" />
                    </font>
                </Label>

            </HBox>

            <VBox maxWidth="500" minWidth="500" alignment="CENTER" spacing="50" style="-fx-background-color: #FFD700; -fx-background-radius: 40;">

                <padding>
                    <Insets bottom="20" left="10" right="10" top="20" />
                </padding>

            <HBox alignment="TOP_CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml">

                <Label style="-fx-font-weight: bold" text="Music:" textFill="BLACK" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Courier" size="20.0" />
                    </font>
                </Label>

                <CheckBox fx:id="musicCheckBox" onAction="#musicCheckBoxListener" />

            </HBox>

            <HBox alignment="TOP_CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml">

                <Label style="-fx-font-weight: bold" text="Audio:" textFill="BLACK" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Courier" size="20.0" />
                    </font>
                </Label>

                <CheckBox fx:id="audioCheckBox" onAction="#audioCheckBoxListener" />

            </HBox>

            <HBox alignment="TOP_CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml">

                <Label style="-fx-font-weight: bold" text="Difficulty:" textFill="BLACK" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Courier" size="20.0" />
                    </font>
                </Label>

                <HBox alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml">
                    <Button fx:id="easyButton" wrapText="true" style="-fx-background-color: #696969; -fx-background-radius: 15; -fx-border-color: #FFFFFF; -fx-border-radius: 15;" onAction="#easyButtonListener" text="Easy" />
                    <Button fx:id="mediumButton" wrapText="true" style="-fx-background-color: #696969; -fx-background-radius: 15; -fx-border-color: #FFFFFF; -fx-border-radius: 15;" onAction="#mediumButtonListener" text="Medium" />
                    <Button fx:id="hardButton" wrapText="true" style="-fx-background-color: #696969; -fx-background-radius: 15; -fx-border-color: #FFFFFF; -fx-border-radius: 15;" onAction="#hardButtonListener" text="Hard" />
                </HBox>

            </HBox>

            </VBox>
        </VBox>

    </center>

</BorderPane>
